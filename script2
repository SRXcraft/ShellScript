#!/bin/bash
#Florian / Adrien
echo "Installation d'Atom, veuillez patientez..."
apt-get update
apt-get install gdebi

#boucle
while [ "$rep1" != "Y" ];
	do
		echo "installer le paquet logiciel ?"
		read rep1
done
#fin de boucle

if [ "$rep1" == "Y" ];
	then
		wget -q / -P / https://github.com/atom/atom/releases/download/v1.24.0/atom-amd64.deb

		echo "Lancer l'installation ?"
		read rep2

			if [ "$rep2" == "Y" ];
				then
					gdebi /atom-amd64.deb
			elif [ "$rep2" == "N" ];
				then
					echo "Annulation ..."
			else
				echo "Argument incorrect"
			fi

elif [ "$rep1" == "N" ]
	then
		echo "Lancer l'installation ?"
		read rep2

			if [ "$rep2" == "Y" ];
				then
					gdebi /atom-amd64.deb
			elif [ "$rep2" == "N" ];
				then
					echo "Annulation ..."
			else
				echo "Argument incorrect"
			fi
else
	echo "erreur"
fi
